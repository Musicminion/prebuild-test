{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"waitFor": "onCreateCommand",
	"updateContentCommand": "npm install",
	"postCreateCommand": "docker-compose -f docker-compose.image.yml pull",
	"postAttachCommand": {
	  "server": "npm start"
	},
	"portsAttributes": {
	  "3000": {
		"label": "Application",
		"onAutoForward": "openPreview"
	  }
	},
	"forwardPorts": [3000]
}